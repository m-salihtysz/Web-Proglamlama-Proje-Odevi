@model FitnessCenter.Web.ViewModels.ServiceViewModel
@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm" style="border-radius: 20px; border: none;">
            <div class="card-header bg-white" style="border-radius: 20px 20px 0 0 !important; border-bottom: 1px solid rgba(0,0,0,0.08);">
                <h3 class="card-title mb-0 fw-semibold">Yeni Hizmet Ekle</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold">Hizmet Adı</label>
                        <input asp-for="Name" class="form-control" style="border-radius: 10px;" placeholder="Örn: Fitness, Yoga, Pilates, Personal Training..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="4" style="border-radius: 10px;" placeholder="Hizmet hakkında detaylı açıklama..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DurationMinutes" class="form-label fw-semibold">Süre (dakika)</label>
                            <input asp-for="DurationMinutes" class="form-control" type="number" min="1" max="600" style="border-radius: 10px;" placeholder="Örn: 60" />
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label fw-semibold">Fiyat (TL)</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" max="10000" style="border-radius: 10px;" placeholder="Örn: 500.00" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary me-md-2" style="border-radius: 12px; padding: 12px;">İptal</a>
                        <button type="submit" class="btn btn-primary" style="border-radius: 12px; padding: 12px;">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

