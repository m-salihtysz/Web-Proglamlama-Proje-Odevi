@model IEnumerable<FitnessCenter.Web.Models.Gym>
@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Spor Salonları</h2>
    <a asp-action="Create" class="btn btn-primary">➕ Yeni Spor Salonu Ekle</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Adres</th>
                    <th>Çalışma Günleri</th>
                    <th>Çalışma Saatleri</th>
                    <th>Antrenör Sayısı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var gym in Model)
                {
                    <tr>
                        <td><strong>@gym.Name</strong></td>
                        <td>@gym.Address</td>
                        <td>
                            @if (!string.IsNullOrEmpty(gym.WorkDays))
                            {
                                var days = gym.WorkDays.Split(',');
                                var dayNames = new Dictionary<string, string>
                                {
                                    {"Monday", "Pzt"}, {"Tuesday", "Sal"}, {"Wednesday", "Çar"},
                                    {"Thursday", "Per"}, {"Friday", "Cum"}, {"Saturday", "Cmt"}, {"Sunday", "Paz"}
                                };
                                @string.Join(", ", days.Select(d => dayNames.ContainsKey(d.Trim()) ? dayNames[d.Trim()] : d.Trim()))
                            }
                            else
                            {
                                <span class="text-muted">Belirtilmemiş</span>
                            }
                        </td>
                        <td>
                            @if (gym.WorkStartTime.HasValue && gym.WorkEndTime.HasValue)
                            {
                                @($"{gym.WorkStartTime.Value:hh\\:mm} - {gym.WorkEndTime.Value:hh\\:mm}")
                            }
                            else
                            {
                                <span class="text-muted">Belirtilmemiş</span>
                            }
                        </td>
                        <td>@(gym.Trainers?.Count ?? 0)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@gym.Id" class="btn btn-sm btn-info">Detaylar</a>
                                <a asp-action="Edit" asp-route-id="@gym.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@gym.Id" class="btn btn-sm btn-danger">Sil</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Henüz spor salonu bulunmuyor</h4>
        <p>Sisteme ilk spor salonunu eklemek için aşağıdaki butona tıklayın.</p>
        <a asp-action="Create" class="btn btn-primary">İlk Spor Salonunu Ekle</a>
    </div>
}

