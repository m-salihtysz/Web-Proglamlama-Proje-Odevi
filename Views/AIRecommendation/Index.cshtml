@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const methodText = document.getElementById('methodText');
            const methodPhoto = document.getElementById('methodPhoto');
            const textInputSection = document.getElementById('textInputSection');
            const photoInputSection = document.getElementById('photoInputSection');

            function toggleSections() {
                if (methodText && methodText.checked) {
                    textInputSection.style.display = 'block';
                    photoInputSection.style.display = 'none';
                } else if (methodPhoto && methodPhoto.checked) {
                    textInputSection.style.display = 'none';
                    photoInputSection.style.display = 'block';
                }
            }

            if (methodText && methodPhoto) {
                methodText.addEventListener('change', toggleSections);
                methodPhoto.addEventListener('change', toggleSections);
                
                // Initialize on page load
                toggleSections();
            }
        });
    </script>
}

