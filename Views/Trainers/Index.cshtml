@model IEnumerable<FitnessCenter.Web.Models.Trainer>
@{
    ViewData["Title"] = "Antrenörler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Antrenörler</h2>
    <a asp-action="Create" class="btn btn-primary">➕ Yeni Antrenör Ekle</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Spor Salonu</th>
                    <th>Uzmanlık Alanları</th>
                    <th>Çalışma Günleri</th>
                    <th>Çalışma Saatleri</th>
                    <th>Hizmet Sayısı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trainer in Model)
                {
                    <tr>
                        <td><strong>@trainer.FullName</strong></td>
                        <td>@(trainer.Gym?.Name ?? "Yok")</td>
                        <td>@(trainer.Specializations ?? "Belirtilmemiş")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(trainer.WorkDays))
                            {
                                var days = trainer.WorkDays.Split(',');
                                var dayNames = new Dictionary<string, string>
                                {
                                    {"Monday", "Pzt"}, {"Tuesday", "Sal"}, {"Wednesday", "Çar"},
                                    {"Thursday", "Per"}, {"Friday", "Cum"}, {"Saturday", "Cmt"}, {"Sunday", "Paz"}
                                };
                                @string.Join(", ", days.Select(d => dayNames.ContainsKey(d.Trim()) ? dayNames[d.Trim()] : d.Trim()))
                            }
                            else
                            {
                                <span class="text-muted">Belirtilmemiş</span>
                            }
                        </td>
                        <td>
                            @if (trainer.WorkStartTime.HasValue && trainer.WorkEndTime.HasValue)
                            {
                                @($"{trainer.WorkStartTime.Value:hh\\:mm} - {trainer.WorkEndTime.Value:hh\\:mm}")
                            }
                            else
                            {
                                <span class="text-muted">Belirtilmemiş</span>
                            }
                        </td>
                        <td>@(trainer.TrainerServices?.Count ?? 0)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@trainer.Id" class="btn btn-sm btn-info">Detaylar</a>
                                <a asp-action="Edit" asp-route-id="@trainer.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@trainer.Id" class="btn btn-sm btn-danger">Sil</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Henüz antrenör bulunmuyor</h4>
        <p>Sisteme ilk antrenörü eklemek için aşağıdaki butona tıklayın.</p>
        <a asp-action="Create" class="btn btn-primary">İlk Antrenörü Ekle</a>
    </div>
}

