@model FitnessCenter.Web.ViewModels.AppointmentViewModel
@{
    ViewData["Title"] = "Randevu Al";
}

<h2>Yeni Randevu Al</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="GymId" class="form-label"></label>
                <select asp-for="GymId" asp-items="ViewBag.GymId" class="form-select" id="gymSelect">
                    <option value="">-- Spor Salonu Seçin --</option>
                </select>
                <span asp-validation-for="GymId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TrainerId" class="form-label"></label>
                <select asp-for="TrainerId" asp-items="ViewBag.TrainerId" class="form-select" id="trainerSelect" disabled>
                    <option value="">-- Antrenör Seçin --</option>
                </select>
                <span asp-validation-for="TrainerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ServiceId" class="form-label"></label>
                <select asp-for="ServiceId" asp-items="ViewBag.ServiceId" class="form-select" id="serviceSelect" disabled>
                    <option value="">-- Hizmet Seçin --</option>
                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AppointmentDate" class="form-label"></label>
                <input asp-for="AppointmentDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" id="appointmentDate" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                <small class="form-text text-muted">Tarih seçildiğinde o gün çalışan antrenörler gösterilecektir.</small>
            </div>

            <div class="mb-3">
                <label asp-for="AppointmentTime" class="form-label"></label>
                <input asp-for="AppointmentTime" class="form-control" type="time" id="appointmentTime" />
                <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                <small class="form-text text-muted" id="workHoursInfo">Antrenör seçildiğinde çalışma saatleri gösterilecektir.</small>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Randevu Al</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            function loadTrainers() {
                var gymId = $('#gymSelect').val();
                var appointmentDate = $('#appointmentDate').val();
                
                if (gymId && appointmentDate) {
                    $.ajax({
                        url: '@Url.Action("GetTrainers", "Appointments")',
                        type: 'GET',
                        data: { gymId: gymId, appointmentDate: appointmentDate },
                        success: function(data) {
                            $('#trainerSelect').empty().append('<option value="">-- Antrenör Seçin --</option>');
                            if (data.length === 0) {
                                $('#trainerSelect').append('<option value="" disabled>Bu tarihte çalışan antrenör bulunmamaktadır.</option>');
                                $('#trainerSelect').prop('disabled', true);
                            } else {
                                $.each(data, function(i, trainer) {
                                    var timeInfo = '';
                                    if (trainer.workStartTime && trainer.workEndTime) {
                                        timeInfo = ' (Çalışma: ' + trainer.workStartTime + ' - ' + trainer.workEndTime + ')';
                                    }
                                    $('#trainerSelect').append($('<option></option>')
                                        .val(trainer.id)
                                        .text(trainer.fullName + timeInfo)
                                        .data('workStartTime', trainer.workStartTime)
                                        .data('workEndTime', trainer.workEndTime));
                                });
                                $('#trainerSelect').prop('disabled', false);
                            }
                            $('#serviceSelect').empty().append('<option value="">-- Hizmet Seçin --</option>').prop('disabled', true);
                            $('#appointmentTime').val('');
                            $('#workHoursInfo').text('Antrenör seçildiğinde çalışma saatleri gösterilecektir.');
                        },
                        error: function(xhr, status, error) {
                            console.error('Trainer yükleme hatası:', {
                                status: status,
                                error: error,
                                responseText: xhr.responseText,
                                statusCode: xhr.status
                            });
                            
                            var errorMsg = 'Hata oluştu';
                            if (xhr.responseJSON && xhr.responseJSON.error) {
                                errorMsg = xhr.responseJSON.error;
                            } else if (xhr.status === 0) {
                                errorMsg = 'Sunucuya bağlanılamadı';
                            } else if (xhr.status === 500) {
                                errorMsg = 'Sunucu hatası';
                            }
                            
                            $('#trainerSelect').empty().append('<option value="" disabled>-- ' + errorMsg + ' --</option>').prop('disabled', true);
                        }
                    });
                } else if (gymId) {
                    // Sadece gym seçilmişse, tarih seçilene kadar bekle
                    $('#trainerSelect').empty().append('<option value="">-- Önce tarih seçin --</option>').prop('disabled', true);
                    $('#serviceSelect').empty().append('<option value="">-- Hizmet Seçin --</option>').prop('disabled', true);
                } else {
                    $('#trainerSelect').empty().append('<option value="">-- Antrenör Seçin --</option>').prop('disabled', true);
                    $('#serviceSelect').empty().append('<option value="">-- Hizmet Seçin --</option>').prop('disabled', true);
                }
            }

            $('#gymSelect').change(function() {
                loadTrainers();
            });

            $('#appointmentDate').change(function() {
                loadTrainers();
            });

            $('#trainerSelect').change(function() {
                var trainerId = $(this).val();
                var selectedOption = $(this).find('option:selected');
                var workStartTime = selectedOption.data('workStartTime');
                var workEndTime = selectedOption.data('workEndTime');
                
                // Çalışma saatlerini göster
                if (workStartTime && workEndTime) {
                    $('#workHoursInfo').text('Çalışma saatleri: ' + workStartTime + ' - ' + workEndTime);
                    $('#appointmentTime').attr('min', workStartTime);
                    $('#appointmentTime').attr('max', workEndTime);
                } else {
                    $('#workHoursInfo').text('Bu antrenör için çalışma saatleri belirtilmemiş.');
                    $('#appointmentTime').removeAttr('min');
                    $('#appointmentTime').removeAttr('max');
                }
                
                if (trainerId) {
                    $.ajax({
                        url: '@Url.Action("GetServices", "Appointments")',
                        type: 'GET',
                        data: { trainerId: trainerId },
                        success: function(data) {
                            $('#serviceSelect').empty().append('<option value="">-- Hizmet Seçin --</option>');
                            $.each(data, function(i, service) {
                                $('#serviceSelect').append($('<option></option>').val(service.id).text(service.name + ' - ' + service.price + ' TL (' + service.durationMinutes + ' dakika)'));
                            });
                            $('#serviceSelect').prop('disabled', false);
                        }
                    });
                } else {
                    $('#serviceSelect').empty().append('<option value="">-- Hizmet Seçin --</option>').prop('disabled', true);
                    $('#workHoursInfo').text('Antrenör seçildiğinde çalışma saatleri gösterilecektir.');
                }
            });
        });
    </script>
}

