@model IEnumerable<FitnessCenter.Web.Models.Service>
@{
    ViewData["Title"] = "Hizmetler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Hizmetler</h2>
    <a asp-action="Create" class="btn btn-primary">➕ Yeni Hizmet Ekle</a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Hizmet Adı</th>
                    <th>Açıklama</th>
                    <th>Süre</th>
                    <th>Fiyat</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td><strong>@service.Name</strong></td>
                        <td>@(service.Description?.Length > 50 ? service.Description.Substring(0, 50) + "..." : service.Description ?? "Açıklama yok")</td>
                        <td>@service.DurationMinutes dakika</td>
                        <td>@service.Price.ToString("C")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-sm btn-info">Detaylar</a>
                                <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-sm btn-danger">Sil</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Henüz hizmet bulunmuyor</h4>
        <p>Sisteme ilk hizmeti eklemek için aşağıdaki butona tıklayın.</p>
        <a asp-action="Create" class="btn btn-primary">İlk Hizmeti Ekle</a>
    </div>
}

