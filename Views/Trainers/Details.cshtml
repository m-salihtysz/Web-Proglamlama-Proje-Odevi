@model FitnessCenter.Web.Models.Trainer
@{
    ViewData["Title"] = "Antrenör Detayları";
}

<h2>Antrenör Detayları</h2>
<hr />

<dl class="row">
    <dt class="col-sm-3">Ad Soyad</dt>
    <dd class="col-sm-9"><strong>@Model.FullName</strong></dd>

    <dt class="col-sm-3">Spor Salonu</dt>
    <dd class="col-sm-9">@(Model.Gym?.Name ?? "Yok")</dd>

    <dt class="col-sm-3">Uzmanlık Alanları</dt>
    <dd class="col-sm-9">@(Model.Specializations ?? "Belirtilmemiş")</dd>

    <dt class="col-sm-3">Çalışma Günleri</dt>
    <dd class="col-sm-9">
        @if (!string.IsNullOrEmpty(Model.WorkDays))
        {
            var days = Model.WorkDays.Split(',');
            var dayNames = new Dictionary<string, string>
            {
                {"Monday", "Pazartesi"}, {"Tuesday", "Salı"}, {"Wednesday", "Çarşamba"},
                {"Thursday", "Perşembe"}, {"Friday", "Cuma"}, {"Saturday", "Cumartesi"}, {"Sunday", "Pazar"}
            };
            @string.Join(", ", days.Select(d => dayNames.ContainsKey(d.Trim()) ? dayNames[d.Trim()] : d.Trim()))
        }
        else
        {
            <span class="text-muted">Belirtilmemiş</span>
        }
    </dd>

    <dt class="col-sm-3">Çalışma Saatleri</dt>
    <dd class="col-sm-9">
        @if (Model.WorkStartTime.HasValue && Model.WorkEndTime.HasValue)
        {
            @($"{Model.WorkStartTime.Value:hh\\:mm} - {Model.WorkEndTime.Value:hh\\:mm}")
        }
        else
        {
            <span class="text-muted">Belirtilmemiş</span>
        }
    </dd>
</dl>

@if (Model.TrainerServices.Any())
{
    <h4 class="mt-4">Verdiği Hizmetler</h4>
    <ul class="list-group">
        @foreach (var trainerService in Model.TrainerServices)
        {
            <li class="list-group-item">
                <strong>@trainerService.Service?.Name</strong> - @trainerService.Service?.Price.ToString("C") (@trainerService.Service?.DurationMinutes dakika)
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info mt-4">
        Bu antrenör henüz hizmet vermiyor.
    </div>
}

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Sil</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>

