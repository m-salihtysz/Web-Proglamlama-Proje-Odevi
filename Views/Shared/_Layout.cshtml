@inject Microsoft.AspNetCore.Identity.UserManager<FitnessCenter.Web.Models.ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spor Salonu Yönetim Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg app-navbar">
            <div class="container-fluid">
                <a class="navbar-brand app-logo" asp-controller="Home" asp-action="Index">
                    <span class="app-logo-icon">
                        <svg width="44" height="44" viewBox="0 0 44 44" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <!-- Sade halter kaldıran adam silüeti (tamamen siyah) -->
                            <!-- Üstte halter barı -->
                            <rect x="6" y="8" width="32" height="3" rx="1.5" fill="#000000" />
                            <!-- Sol ağırlık plakaları -->
                            <rect x="4" y="6" width="2" height="7" fill="#000000" />
                            <rect x="2" y="7" width="2" height="5" fill="#000000" />
                            <!-- Sağ ağırlık plakaları -->
                            <rect x="38" y="6" width="2" height="7" fill="#000000" />
                            <rect x="40" y="7" width="2" height="5" fill="#000000" />

                            <!-- Kollar (halter barına uzanan) -->
                            <path d="M16 20 L11 12" stroke="#000000" stroke-width="3" stroke-linecap="round" />
                            <path d="M28 20 L33 12" stroke="#000000" stroke-width="3" stroke-linecap="round" />

                            <!-- Baş -->
                            <circle cx="22" cy="18" r="3" fill="#000000" />

                            <!-- Gövde -->
                            <path d="M18 22 C18 20 26 20 26 22 L26 28 C26 30 24 32 22 32 C20 32 18 30 18 28 Z" fill="#000000" />

                            <!-- Bacaklar -->
                            <path d="M20 32 L18 38" stroke="#000000" stroke-width="3" stroke-linecap="round" />
                            <path d="M24 32 L26 38" stroke="#000000" stroke-width="3" stroke-linecap="round" />
                        </svg>
                    </span>
                    <span class="app-logo-text">
                        <span class="app-logo-main">SPOR SALONU</span>
                        <span class="app-logo-sub">FITNESS CENTER</span>
                    </span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Admin Paneli
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item" asp-controller="Gyms" asp-action="Index">Spor Salonlarını Yönet</a></li>
                                        <li><a class="dropdown-item" asp-controller="Trainers" asp-action="Index">Antrenörleri Yönet</a></li>
                                        <li><a class="dropdown-item" asp-controller="Services" asp-action="Index">Hizmetleri Yönet</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Appointments" asp-action="Index">Tüm Randevular</a></li>
                                    </ul>
                                </li>
                            }
                            @if (User.IsInRole("Member"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Appointments" asp-action="Index">Randevularım</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Appointments" asp-action="Create">Randevu Al</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AIRecommendation" asp-action="Index">Yapay Zeka Önerileri</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var displayName = currentUser != null && (!string.IsNullOrEmpty(currentUser.FirstName) || !string.IsNullOrEmpty(currentUser.LastName))
                                ? $"{currentUser.FirstName} {currentUser.LastName}".Trim()
                                : currentUser?.Email ?? User.Identity.Name ?? "Kullanıcı";
                            <li class="nav-item">
                                <span class="navbar-text me-3">Merhaba, @displayName!</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">Çıkış Yap</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="app-footer mt-auto">
        <div class="text-center p-3">
            &copy; 2025 - Spor Salonu Yönetim Sistemi
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
