@{
    ViewData["Title"] = "Ana Sayfa";
    var isAdmin = User.IsInRole("Admin");
    var isMember = User.IsInRole("Member");
}

@if (User.Identity!.IsAuthenticated)
{
    @if (isAdmin)
    {
        <div class="text-center mb-4 app-dashboard-header">
            <h1 class="display-4">👨‍💼 Admin Paneli</h1>
            <p class="lead">Spor salonu yönetim sistemini yönetin</p>
        </div>

        <div class="row mt-4">
            <div class="col-md-4 mb-4">
                <div class="card app-dashboard-card h-100">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-3">🏋️ Spor Salonları</h2>
                        <p class="card-text">Spor salonlarını ekleyin, düzenleyin ve yönetin.</p>
                        <a asp-controller="Gyms" asp-action="Index" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-building"></i> Spor Salonlarını Yönet
                        </a>
                        <a asp-controller="Gyms" asp-action="Create" class="btn btn-outline-primary mt-2 w-100">
                            ➕ Yeni Spor Salonu Ekle
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card app-dashboard-card h-100">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-3">👨‍🏫 Antrenörler</h2>
                        <p class="card-text">Antrenörleri ekleyin, düzenleyin ve yönetin.</p>
                        <a asp-controller="Trainers" asp-action="Index" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-people"></i> Antrenörleri Yönet
                        </a>
                        <a asp-controller="Trainers" asp-action="Create" class="btn btn-outline-success mt-2 w-100">
                            ➕ Yeni Antrenör Ekle
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card app-dashboard-card h-100">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-3">💼 Hizmetler</h2>
                        <p class="card-text">Hizmetleri ekleyin, düzenleyin ve yönetin.</p>
                        <a asp-controller="Services" asp-action="Index" class="btn btn-info btn-lg w-100">
                            <i class="bi bi-list-check"></i> Hizmetleri Yönet
                        </a>
                        <a asp-controller="Services" asp-action="Create" class="btn btn-outline-info mt-2 w-100">
                            ➕ Yeni Hizmet Ekle
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-12 mb-4">
                <div class="card app-dashboard-card">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-3">📋 Tüm Randevular</h2>
                        <p class="card-text">Sistemdeki tüm randevuları görüntüleyin ve yönetin.</p>
                        <a asp-controller="Appointments" asp-action="Index" class="btn btn-warning btn-lg">
                            <i class="bi bi-calendar-check"></i> Randevuları Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (isMember)
    {
        <div class="text-center mb-4 app-dashboard-header">
            <h1 class="display-4">👤 Üye Paneli</h1>
            <p class="lead">Randevularınızı yönetin ve kişiselleştirilmiş öneriler alın</p>
        </div>

        <div class="row mt-4">
            <div class="col-md-6 mb-4">
                <div class="card app-dashboard-card h-100">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-3">📅 Randevu Al</h2>
                        <p class="card-text">Uygun antrenör ve hizmete göre yeni randevu oluşturun.</p>
                        <a asp-controller="Appointments" asp-action="Create" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-calendar-plus"></i> Yeni Randevu Al
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card app-dashboard-card h-100">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-3">📋 Randevularım</h2>
                        <p class="card-text">Randevularınızı görüntüleyin ve yönetin.</p>
                        <a asp-controller="Appointments" asp-action="Index" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-calendar-check"></i> Randevularımı Görüntüle
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-12 mb-4">
                <div class="card app-dashboard-card">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-3">🤖 Yapay Zeka Önerileri</h2>
                        <p class="card-text">Vücut ölçülerinizi girerek kişiselleştirilmiş egzersiz ve diyet planı alın.</p>
                        <a asp-controller="AIRecommendation" asp-action="Index" class="btn btn-info btn-lg">
                            <i class="bi bi-robot"></i> Önerileri Al
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center">
        <h1 class="display-4">Spor Salonu Yönetim Sistemine Hoş Geldiniz</h1>
        <p class="lead">Spor salonunuzu, antrenörleri, hizmetleri ve randevuları tek bir yerden yönetin.</p>
        
        <div class="mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h3>Başlamak için</h3>
                            <p>Lütfen giriş yapın veya yeni hesap oluşturun.</p>
                            <div class="d-grid gap-2">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">Giriş Yap</a>
                                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">Kayıt Ol</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
