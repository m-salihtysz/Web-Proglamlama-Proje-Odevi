@model FitnessCenter.Web.ViewModels.GymViewModel
@{
    ViewData["Title"] = "Spor Salonu Düzenle";
}

<h2>Spor Salonu Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Çalışma Günleri</label>
                <div class="row">
                    @{
                        var days = new[] { 
                            ("Monday", "Pazartesi"), 
                            ("Tuesday", "Salı"), 
                            ("Wednesday", "Çarşamba"), 
                            ("Thursday", "Perşembe"), 
                            ("Friday", "Cuma"), 
                            ("Saturday", "Cumartesi"), 
                            ("Sunday", "Pazar") 
                        };
                    }
                    @foreach (var (value, label) in days)
                    {
                        <div class="col-md-3 mb-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="WorkDays" value="@value" id="day_@value" 
                                       @(Model.WorkDays.Contains(value) ? "checked" : "") />
                                <label class="form-check-label" for="day_@value">@label</label>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="WorkStartTime" class="form-label"></label>
                    <input asp-for="WorkStartTime" class="form-control" type="time" />
                    <span asp-validation-for="WorkStartTime" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="WorkEndTime" class="form-label"></label>
                    <input asp-for="WorkEndTime" class="form-control" type="time" />
                    <span asp-validation-for="WorkEndTime" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

